/* pages/detail/detail.wxss */
.header{
  box-sizing: border-box;
  padding:10px 15px
}
.header .img{
  width:100%;
  height:200px;
  border-radius:5px;
  box-shadow:0 0 1px rgba(0, 0, 0, .7)
}
.box{
  padding: 10px 0;
  background-color:#fcfcfc;
  box-shadow: 0 0 2px rgba(0, 0, 0, .7);
  border-radius:5px;
}
.active text{
  border-bottom:1px solid #ff00ff
}
.item::before{
  content:'';
  position:absolute;
  top:0;
  left:0;
  right:0;
  width:2px;
  height:100%;
  background-color:#ff00ff;
}